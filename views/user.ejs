<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet"/>

<div class="container-fluid">
    <h1>List of Users</h1>

    <ul class="list-group">

        <li class=list-group-item>
            <input name="username" class="form-control"/>
            <button class="btn btn-block btn-primary">Create</button>
        </li>
        <% for (var u in users) {
        %>
        <li><%= users[u].username %></li>

        <a href="/lecture/ejs/crud/user/<%= u.userId %>/delete">
            <span class="glyphicon-remove glyphicon pull-right"></span></a>

        <a href="/lecture/ejs/crud/user/<%= u.userId %>/select">
            <span class="glyphicon-cog glyphicon pull-right"></span></a>

        <% } %>
    </ul>

</div>